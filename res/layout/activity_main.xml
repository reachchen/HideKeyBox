<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andychen.hidekeybox.activity.MainActivity" 
    android:id="@+id/rl_rootview">
    <Button 
        android:id="@+id/btn_customlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="自定义布局实现键盘监听"/>
    <Button
        android:id="@+id/btn_rootlayout" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_customlayout"
        android:layout_marginTop="30dp"
        android:text="监听根部局来实现监听"/>
    
    

</RelativeLayout>
